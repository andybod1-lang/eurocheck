{
  "name": "eurocheck",
  "version": "0.1.0",
  "description": "Browser extension to identify EU vs non-EU company ownership",
  "main": "src/background.js",
  "scripts": {
    "optimize": "node scripts/optimize-data.js",
    "build:chrome": "node scripts/build.js chrome",
    "build:firefox": "node scripts/build.js firefox",
    "build:safari": "node scripts/build.js safari",
    "build:all": "npm run build:chrome && npm run build:firefox && npm run build:safari",
    "package:chrome": "node scripts/build.js chrome --zip",
    "package:firefox": "node scripts/build.js firefox --zip",
    "package:all": "npm run package:chrome && npm run package:firefox",
    "test": "node --test src/**/*.test.js",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:debug": "PWDEBUG=1 npx playwright test",
    "playwright:install": "npx playwright install --with-deps chromium",
    "lint": "eslint src/"
  },
  "keywords": [
    "browser-extension",
    "eu",
    "european",
    "company",
    "ownership",
    "chrome-extension",
    "firefox-addon",
    "safari-extension"
  ],
  "author": "Pekka",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "ajv": "^8.17.1",
    "ajv-draft-04": "^1.0.0",
    "ajv-formats": "^3.0.1",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "puppeteer": "^24.36.1",
    "puppeteer-core": "^24.36.0"
  }
}
